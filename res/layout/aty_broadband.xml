<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_oper_brodband"
    android:orientation="vertical"
    android:paddingBottom="50dp" >

    <include layout="@layout/item_commentitleview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/mob_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/oper_brodband1" />

        <ImageView
            android:id="@+id/uni_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/oper_brodband2" />

        <ImageView
            android:id="@+id/tel_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/oper_brodband3" />
    </LinearLayout>

</LinearLayout>