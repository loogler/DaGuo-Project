<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school_main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green_home"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView 
                android:padding="5dp"
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightarrow"/>
        </LinearLayout>

        <TextView
            android:id="@+id/schoolname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="安徽大学"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:maxLines="1" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tabhome_userbtn"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_mail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:focusable="false"
                android:paddingRight="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/school_main1_message" />

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/iv_mail"
                android:src="@drawable/tabhome_xx" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/v"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#fff" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/v"
            android:src="@drawable/school_main_flag" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv_kebiao"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv4"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv3"
            android:src="@drawable/school_main1_kebiao" />

        <ImageView
            android:id="@+id/iv_shuoshuo"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv3"
            android:layout_toRightOf="@+id/iv1"
            android:src="@drawable/school_main1_shuoshuo" />

        <ImageView
            android:id="@+id/iv_ditu"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv5"
            android:layout_toRightOf="@+id/iv1"
            android:src="@drawable/school_main1_ditu" />

        <ImageView
            android:id="@+id/iv_shetuan"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv6"
            android:layout_alignLeft="@+id/iv_kebiao"
            android:src="@drawable/school_main1_shetuan" />

        <ImageView
            android:id="@+id/iv_xinwen"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv7"
            android:layout_alignLeft="@+id/iv_ditu"
            android:src="@drawable/school_main1_xinwen" />

        <ImageView
            android:id="@+id/iv_huodong"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/iv7"
            android:layout_alignLeft="@+id/iv_shetuan"
            android:src="@drawable/school_main1_huodong" />

        <ImageView
            android:id="@+id/iv111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/school_bars1"
           />

    </RelativeLayout>

</LinearLayout>