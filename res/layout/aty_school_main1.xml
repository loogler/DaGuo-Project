<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school_main_bg"
    android:orientation="vertical" >

    <include layout="@layout/item_commentitleview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/v"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#fff" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/v"
            android:src="@drawable/school_main_flag" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/school_main_cir" />

        <ImageView
            android:id="@+id/iv_kebiao"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv4"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv3"
            android:src="@drawable/school_main1_kebiao" />

        <ImageView
            android:id="@+id/iv_shuoshuo"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv3"
            android:layout_toRightOf="@+id/iv1"
            android:src="@drawable/school_main1_shuoshuo" />

        <ImageView
            android:id="@+id/iv_ditu"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv5"
            android:layout_toRightOf="@+id/iv1"
            android:src="@drawable/school_main1_ditu" />

        <ImageView
            android:id="@+id/iv_shetuan"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv6"
            android:layout_alignLeft="@+id/iv_kebiao"
            android:src="@drawable/school_main1_shetuan" />

        <ImageView
            android:id="@+id/iv_xinwen"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_above="@+id/iv7"
            android:layout_alignLeft="@+id/iv_ditu"
            android:src="@drawable/school_main1_xinwen" />

        <ImageView
            android:id="@+id/iv_huodong"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/iv7"
            android:layout_alignLeft="@+id/iv_shetuan"
            android:src="@drawable/school_main1_huodong" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center|bottom" >

            <TextView
                android:id="@+id/iv111"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/school_bars1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>