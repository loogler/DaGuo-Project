<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- ************************************** -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_toptitle_bar"
        android:gravity="center_vertical" >

        <ImageView
            android:visibility="gone"
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/toptitle_bar_back_" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/back"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- **************************可滑动界面********************** -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/erweima" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="扫描二维码，与同学一起分享快乐时光"
                    android:textColor="@color/text"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- *********************版本更新********************** -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_rec"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start"
                        android:padding="8dp"
                        android:text="版本更新" />

                    <TextView
                        android:id="@+id/banben"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|start"
                        android:padding="8dp"
                        android:text=""
                        android:textColor="@color/green_home" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
                <!-- *********************简介********************** -->

                <TextView
                    android:id="@+id/jianjie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="大果校园简介" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_2" />
                <!-- *********************用户协议********************** -->

                <TextView
                    android:id="@+id/xieyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="用户协议" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
                <!-- *********************个人资料修改********************** -->

                <TextView
                    android:id="@+id/xiugai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="个人资料修改" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_2" />
                <!-- *********************新消息提醒********************** -->

                <TextView
                    android:id="@+id/tixing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="新消息提醒" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
                <!-- *********************清除缓存********************** -->

                <TextView
                    android:id="@+id/huancun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="清除缓存" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
                <!-- *********************意见反馈********************** -->

                <TextView
                    android:id="@+id/fankui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="意见反馈" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
                <!-- *********************推荐给好友********************** -->

                <TextView
                    android:id="@+id/tuijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="推荐给好友" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
                <!-- *********************关于********************** -->

                <TextView
                    android:visibility="gone"
                    android:id="@+id/guanyu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="关于" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
                <!-- *********************切换账号********************** -->

                <TextView
                    android:id="@+id/zhuxiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/rightarrow"
                    android:gravity="center_vertical|start"
                    android:padding="8dp"
                    android:text="切换账号" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey_1" />
            </LinearLayout>

            <Button
                android:layout_marginTop="40dp"
                android:id="@+id/tuichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shezhi_bottom_btn"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:text="退出"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>