<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:padding="8dp" >

    <com.daguo.util.base.CircularImage
        android:id="@+id/photo"
        android:src="@drawable/ic_launcher"
        android:layout_width="50dip"
        android:layout_height="50dip" >
    </com.daguo.util.base.CircularImage>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/photo"
        android:paddingLeft="10dp"
        android:text="赵云"
        android:textColor="#697fb1"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/photo"
        android:layout_alignLeft="@+id/name_tv"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sex_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sex_man" />

        <TextView
            android:id="@+id/schoolName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安徽大学"
            android:textColor="@color/green_home" />
    </LinearLayout>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrows"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>