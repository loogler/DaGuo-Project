<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/shape_tabhome_advertise"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp" >

        <TextView
            android:id="@+id/title1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="大标题"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignBottom="@id/title1_tv"
            android:background="@color/lightgrey" />

        <TextView
            android:id="@+id/title2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title1_tv"
            android:layout_marginLeft="3dp"
            android:maxLines="4"
            android:paddingLeft="2dp"
            android:text="副标题"
            android:textColor="@color/deep_gray"
            android:textSize="14sp" />

        <Button
            android:layout_marginBottom="10dp"
            android:id="@+id/status_btn"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_fillet_orange"
            android:text="使用"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>