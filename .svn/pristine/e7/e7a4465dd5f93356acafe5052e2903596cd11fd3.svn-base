<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/about_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/schedule_insert_tv1"
        style="@style/R_tittle_tv"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="修改课程"
        android:visibility="gone" >
    </TextView>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </Spinner>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" >

            <TableLayout
                android:id="@+id/schedule_tl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:shrinkColumns="1"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        android:id="@+id/scheduleInsert_tv1_1"
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:text="1、2节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/scheduleInsert_et1_2"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/scheduleInsert_et1_3"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/scheduleInsert_tv2_1"
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="3、4节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/scheduleInsert_et2_2"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/scheduleInsert_et2_3"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/scheduleInsert_tv3_1"
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:text="5、6节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/scheduleInsert_et3_2"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/scheduleInsert_et3_3"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/scheduleInsert_tv4_1"
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="7、8节" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/scheduleInsert_et4_2"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/scheduleInsert_et4_3"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/scheduleInsert_tv5_1"
                        style="@style/scheduleInsert_tv1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="选修" >
                    </TextView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/scheduleInsert_et5_2"
                            style="@style/scheduleInsert_et2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>

                        <EditText
                            android:id="@+id/scheduleInsert_et5_3"
                            style="@style/scheduleInsert_et3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >
                        </EditText>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/schedule_insert_bt1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_btn_ellipse"
                android:src="@drawable/selector_btn_sumit" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/schedule_insert_bt2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_btn_ellipse"
                android:src="@drawable/selector_btn_back" >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>