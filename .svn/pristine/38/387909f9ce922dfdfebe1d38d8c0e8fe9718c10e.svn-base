<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/about_background" >

    <TextView
        android:id="@+id/remind_edit_tv1"
        style="@style/R_tittle_tv"
        android:text="修改备忘" >
    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remind_edit_tv1" >

        <TextView
            android:visibility="gone"
            android:id="@+id/remind_edit_tv2"
            style="@style/R_datebox_tv" >
        </TextView>

        <EditText
            android:id="@+id/remind_edit_et1"
            style="@style/R_edittext_et"
            android:layout_below="@id/remind_edit_tv2" >
        </EditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <!--
               <ImageButton
              android:id="@+id/remind_edit_bt1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:src="@drawable/selector_btn_sumit"
              android:background="@android:color/transparent"
              android:layout_marginBottom="10dp"
              >
              </ImageButton>
            -->

            <ImageButton
                android:id="@+id/remind_edit_bt2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_btn_delect" >
            </ImageButton>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>