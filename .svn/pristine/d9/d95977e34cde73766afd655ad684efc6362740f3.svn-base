<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/goodsPic_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/goodsName_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="小米白色4g500g高端手机你值得拥有" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goodsPrice_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="100"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/goodsCount_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="*1"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/goosdsDesc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="共1件商品，总计： 0.00元" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/goodsState_tv"
            android:textColor="@color/white"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_fillet_green"
            android:gravity="center"
            android:text="去付款" />
    </LinearLayout>

</LinearLayout>